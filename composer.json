{
    "name": "wbrframe/docker-symfony-skeleton",
    "description": "Skeleton is crafted to swiftly set up the environment for new Symfony projects. ",
    "authors": [{
        "name": "Vaskevich Yevhenii",
        "email": "wbrframe@gmail.com"
    }],
    "type": "project",
    "license": "MIT",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": ">=7.4",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "symfony/console": "5.4.*",
        "symfony/dotenv": "5.4.*",
        "symfony/flex": "^1.17|^2",
        "symfony/framework-bundle": "5.4.*",
        "symfony/runtime": "5.4.*",
        "symfony/yaml": "5.4.*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.54",
        "phpstan/phpstan": "^1.10"
    },
    "config": {
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "php-http/discovery": true,
            "symfony/flex": true,
            "symfony/runtime": true
        },
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "ci:pack": [
            "@ci:code-style",
            "@ci:code-style-fix",
            "@ci:statis-analysis",
            "@ci:lint-yaml",
            "@ci:composer-validate",
            "@ci:security-check"
        ],
        "ci:code-style": "vendor/bin/php-cs-fixer fix --dry-run --config=.php-cs-fixer.dist.php -v",
        "ci:code-style-fix": "vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.dist.php -v",
        "ci:statis-analysis": "vendor/bin/phpstan analyse",
        "ci:lint-yaml": [
            "bin/console lint:yaml --parse-tags config/"
        ],
        "ci:composer-validate": "@composer validate --no-check-all --strict",
        "ci:security-check": "security-checker --path=/app"
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "5.4.*"
        }
    }
}
